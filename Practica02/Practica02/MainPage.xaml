             xmlns:local="clr-namespace:Practica02"
             x:Class="Practica02.MainPage">

    <StackLayout>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Clicked="btn01" Image="img.png" Text="Ejemplo 01" Grid.Row="0" Grid.Column="0" />
            <Button Clicked="btn02" Image="img.png" Text="Ejemplo 02" Grid.Row="0" Grid.Column="1"/>
            <Button Clicked="btn03" Image="img.png" Text="Ejemplo 03" Grid.Row="1" Grid.Column="0"/>
            <Button Clicked="btn04" Image="img.png" Text="Ejemplo 04" Grid.Row="1" Grid.Column="1"/>
            <Button Clicked="btn05" Image="img.png" Text="Ejemplo 05" Grid.Row="2" Grid.Column="0"/>
            <Button Clicked="btn06" Image="img.png" Text="Ejemplo 06" Grid.Row="2" Grid.Column="1"/>
        </Grid>

        


    </StackLayout>

</ContentPage>
